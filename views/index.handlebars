<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1 class="display-3">Eat-Da-Burger</h1>
          <p class="lead">Create burgers, eat burgers, repeat!!!</p>
        </div>
        <div class="col-md-6">
          <img src="assets/img/cartoon_burger.png" alt="burger" class="img-fluid">
        </div>
      </div>
    </div>
  </div>


  <div class="row">
      <!-- Left side (ready to eat) -->
      <div class="col-md-6">
        <h4>Ready to eat!</h4>
        <div id="ready_to_eat">

          <!-- Dynamically Insert Ready Burgers Here -->
          {{#each burgers}}
            {{#unless devoured}}
            <form action="api/burgers/{{id}}" method="POST">
              <div class="input-group text-center">
                <li class="form-control">{{burger_name}}</li>
                  <span class="input-group-btn">
                    <button data-id={{id}} class="btn btn-success devour" type="submit">Devour It!</button>
                  </span>
              </div>
            </form>
            {{/unless}}
          {{/each}}

        </div>
      </div>

      <!-- Right side (already eaten) -->
      <div class="col-md-6">
        <h4>Already eaten!</h4>
        <div id="already_eaten">

          <!-- Dynamically Insert Eaten Burgers Here -->
          {{#each burgers}}
            {{#if this.devoured}}
              <div class="input-group text-center">
                <li class="form-control">{{this.burger_name}}</li>
              </div>
            {{/if}}
          {{/each}}

        </div>
      </div>
  </div>

  <br>

  <!-- Input New Burgers Form -->
      <form action="api/burger/" method="POST">
        
        <!-- Text Area Input -->
        <div class="row align-items-center">

          <!-- Burger Input Box -->
          <div class="form-group col-md-6">
            <label for="new_burger" class="red_font">Place your burger order!</label>
            <textarea class="form-control" columns="8" rows="4" id="new_burger" name="burger_name"></textarea>
          </div>
          
        </div>
      
        <!-- Submit Button -->
        <button id="submit-burger" type="submit" class="btn btn-danger">Place Order</button>
      </form>

      <br>

    </div>
  </body>
</html>
</div>